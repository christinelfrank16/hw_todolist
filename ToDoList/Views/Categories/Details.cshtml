@{
  Layout = "_Layout";
}

@using ToDoList.Models;
@using System.Collections.Generic;
@model Dictionary<string, object>;

<h2>Category Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => (Category) model["category"].Name): @Html.DisplayFor(model => (Category) model["category"].Name)<h3>

@if(Model["itemList"].Count == 0)
{
<p> There  are no items in this category!</p>
<p>@Html.ActionLink("Add one here!", "Create", "Item")</p>
}
<ul>
  @foreach(Item item in (List<Item>) Model["itemList"])
  {
      <li>@Html.ActionLink($"{item.Description}", "Details", new { id = item.ItemId })</li>
  }
</ul>

<p>@Html.ActionLink("Back to list", "Index")</p>