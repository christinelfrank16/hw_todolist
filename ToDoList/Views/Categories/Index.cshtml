@{
  Layout = "_Layout";
}

@using ToDoList.Models;
@model List<ToDoList.Models.Category>;

<h1>Categories</h1>

<ul>
  @foreach(Category category in Model)
  {
      <li>@Html.ActionLink($"{category.Name}", "Details", new { id = category.Name })</li>
  }
</ul>

<p>@Html.ActionLink("Add new category", "Create")</p>